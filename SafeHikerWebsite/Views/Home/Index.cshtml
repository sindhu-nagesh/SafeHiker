@{
    ViewBag.Title = "Home Page";
}

<div data-role="page" id="pageone">
    <div class="tophalf">
        <h1 class="header1 center">SafeHiker</h1>
    </div>
    <div class="bottomhalf">
        @*        <p class="lead">Save your hike plans and notify contacts at a time specified by you.</p>*@
        @**@
        @*        <div class="center">*@
        @*            <a class="button" href="#pagetwo" data-transition="fade" onclick="showpage2()">START</a>*@
        @*        </div>*@
        <p class="lead">Add your email and emergency contacts to start using the service.</p>
        <div class="center">
            <a class="button" href="#pagetwo" data-transition="fade" onclick="showpage2()">START</a>
        </div>
    </div>
</div>
<div data-role="page" id="pagetwo" style="display: none" class="formbackground">
    <div class="lefthalf">
    </div>
    <div class="righthalf" style="margin-top: 50px">
        <div class="header2 center">
            Enter Details
        </div>
        <form class="centerbox">
            <table align="left" cellpadding="20">
                <tr>
                    <td colspan="2" style="padding-bottom: 20px" class="lead">Name</td>
                    <td colspan="2" style="padding-bottom: 20px"><input type="text" name="name" size="40%"></td>
                </tr>
                <tr>
                    <td colspan="2" style="padding-bottom: 20px" class="lead">Hike Name</td>
                    <td colspan="2" style="padding-bottom: 20px"><input type="text" name="hikename" size="40%"></td>
                </tr>

                <tr>
                    <td colspan="2" style="padding-bottom: 20px" class="lead">Emergency email 1</td>
                    <td colspan="2" style="padding-bottom: 20px"><input type="email" placeholder="my@email.com" name="emergencyemail1" size="40%"></td>
                </tr>
                <tr>
                    <td colspan="2" style="padding-bottom: 20px" class="lead">Emergency email 2</td>
                    <td colspan="2" style="padding-bottom: 20px"><input type="email" placeholder="my@email.com" name="emergencyemail2" size="40%"></td>
                </tr>

                <tr>
                    <td colspan="2" class="lead" style="padding-bottom: 20px">
                        <span>Start date and time</span><br />
                    </td>
                    <td><input class="datetime" id="startdatetime" /></td>
                </tr>

                <tr>
                    <td colspan="2" class="lead" style="padding-bottom: 20px">
                        <span>End date and time</span><br />
                    </td>
                    <td><input class="datetime" id="enddatetime" /></td>
                </tr>

                <tr>
                    <td colspan="2" class="lead" style="padding-bottom: 20px">
                        <span>Alert Contacts date and time</span><br />
                    </td>
                    <td><input class="datetime" id="alertdatetime" /></td>
                </tr>

                <tr>
                    <td align="center" colspan="2"><a class="button" href="#pageone" data-transition="fade" onclick="showpage1()">Save</a></td>
                    <td align="center" colspan="2"><a class="button" href="#pageone" data-transition="fade" onclick="showpage1()">Clear</a></td>
                </tr>
            </table>
        </form>
    </div>
</div>